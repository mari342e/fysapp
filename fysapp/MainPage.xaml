<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:fysapp"
             xmlns:views="fysapp.NavigationBar"
             x:Class="fysapp.MainPage">
    <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="{StaticResource bgColor}">
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout>
                <Label Text="This is a page title" Style="{StaticResource pageTitle}" />
                <Label Text="Hello" TextColor="{StaticResource bodyText}" HorizontalOptions="Center"/>
                <Button Text="This is a button" Style="{StaticResource btn}" Margin="0,50,0,0" />
            </StackLayout>
        </ScrollView>
        <views:NavigationBar />
    </StackLayout>
</ContentPage>