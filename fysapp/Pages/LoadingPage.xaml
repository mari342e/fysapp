<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="fysapp.Pages.LoadingPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="50,0">
            <Image Source="Logo" WidthRequest="120" HeightRequest="120" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,0,0,50" />
            <Label Text="Loading..." VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="{StaticResource bodyText}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>