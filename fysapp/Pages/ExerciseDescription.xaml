<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fysapp.Pages.ExerciseDescription">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Frame Style="{StaticResource basicListFrame}" >
                
            
            <Label Style="{StaticResource h2}"  Text="{Binding ExerciseID, StringFormat='Øvelse {0}'}" />
                <Label Style="{StaticResource h2}" Text="{Binding Title}" TextColor="Black"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>